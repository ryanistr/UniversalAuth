<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FaceUnlockBaseTheme" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item> </style>

    <style name="FaceUnlockTheme" parent="@style/FaceUnlockBaseTheme">
        <item name="colorPrimary">@color/theme_color</item>
    </style>

    <style name="Widget.FaceUnlock.GlassCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.FaceUnlock.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.FaceUnlock.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SettingsTheme" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/theme_color</item>
    </style>

    <style name="SuwGlifButton.Primary" parent="@android:style/Widget.Material.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="SuwGlifButton.Secondary" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">@color/theme_color</item>
    </style>
    <style name="ButtonText"><item name="android:textSize">14.0sp</item></style>
    <style name="ButtonTextRound" parent="@style/ButtonText"></style>
    <style name="InfoTextFinished"><item name="android:textSize">16.0sp</item></style>
</resources>